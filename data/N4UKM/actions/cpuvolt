TABLE=/sys/devices/system/cpu/cpufreq/vdd_table/vdd_levels
FREQ=$1
VOLT=$2
LEVEL="$1 $2"

if [ -f $TABLE ]; then
	if [[ ! -z $VOLT ]]; then
		if [ "$VOLT" -gt "0" ]; then
			VOLT="+$VOLT"
		else
			VOLT="$VOLT"
		fi
		
		if [ $FREQ = "global" ]; then
			echo $VOLT > $TABLE
		else
			echo $LEVEL > $TABLE
		fi
	fi
	
	if [ $FREQ = "global" ]; then
		VOLT=${VOLT:-0}
		echo $VOLT | sed 's/+//'
	else
		grep $FREQ $TABLE | awk '{print $2}'
	fi
else
	echo "0"
fi;
